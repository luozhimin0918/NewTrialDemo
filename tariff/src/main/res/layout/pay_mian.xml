<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    //标题栏
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back_imag"
            android:layout_margin="15dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@mipmap/icon_back"
            android:layout_width="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的服务"
            android:textColor="#FF464646"
            android:textSize="36px"
            />
        <ImageButton
            android:visibility="invisible"
            android:layout_margin="15dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@mipmap/icon_back"
            android:layout_width="10dp"
            android:layout_height="20dp" />
    </LinearLayout>
    //内容主体
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/optionBgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //套餐名称，剩余天数
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进销存管家高阶版"
                android:textColor="#80664F"
                android:textSize="34px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还剩30天"
                android:textColor="#80664F"
                android:textSize="24px"
                />
        </LinearLayout>
        //套餐详情
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="@drawable/bg_center_white"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:text="•	云端数据无上限存储云端数据无上限存储云端数
    •	本地订单流水信息实时备份
	•	商品明细小票打印（基础版只能使用30天）
	•	30天以外流水实时查询"
                android:textColor="#6C6C6B"
                android:textSize="24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        //促销活动
        <LinearLayout
            android:layout_margin="15dp"
            android:background="@mipmap/banner"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数据打印，对账事半功倍"
                android:textColor="#FFFFFFFF"
                android:textSize="28px"
                />
        </LinearLayout>
        //价格栏
        <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:overScrollMode="never"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>